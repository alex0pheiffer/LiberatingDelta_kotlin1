<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".actFragments.PreBattleFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--the map background..todo add a separate border to cover the screen differences...-->
    <ImageView
        android:id="@+id/regionBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="60dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="160dp" >
            <RelativeLayout
                android:id="@+id/preBattleBackdrop1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@color/barBack">
                <ImageView
                    android:id="@+id/preBattleChar1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/preBattleBackdrop2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@color/barBack">
                <ImageView
                    android:id="@+id/preBattleChar2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/preBattleBackdrop3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@color/barBack">
                <ImageView
                    android:id="@+id/preBattleChar3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </TableRow>
        <TableRow
        android:layout_width="match_parent"
        android:layout_height="60dp" >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp">
                <TextView
                    android:id="@+id/preBattleCharLvl1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@color/barButton"/>
                <TextView
                    android:id="@+id/preBattleCharName1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="start|center_vertical"
                    android:background="@color/barBack"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp">
                <TextView
                    android:id="@+id/preBattleCharLvl2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@color/barButton"/>
                <TextView
                    android:id="@+id/preBattleCharName2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="start|center_vertical"
                    android:background="@color/barBack"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp">
                <TextView
                    android:id="@+id/preBattleCharLvl3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@color/barButton"/>
                <TextView
                    android:id="@+id/preBattleCharName3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="start|center_vertical"
                    android:background="@color/barBack"/>
            </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="60dp" >
        <LinearLayout
            android:id="@+id/preBattleCharWeapon1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/barBack">
            <ImageView
                android:id="@+id/preBattleCharWeaponImg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/barButton"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_weight="3"/>
        <LinearLayout
            android:id="@+id/preBattleCharDeck1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/barBack">
            <ImageView
                android:id="@+id/preBattleCharDeckImg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/barButton"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_weight="3"/>
        <LinearLayout
            android:id="@+id/preBattleCharItem1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/barBack">
            <ImageView
                android:id="@+id/preBattleCharItemImg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/barButton"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_weight="5"/>
        <LinearLayout
            android:id="@+id/preBattleCharWeapon2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/barBack">
            <ImageView
                android:id="@+id/preBattleCharWeaponImg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/barButton"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_weight="3"/>
        <LinearLayout
            android:id="@+id/preBattleCharDeck2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/barBack">
            <ImageView
                android:id="@+id/preBattleCharDeckImg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/barButton"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_weight="3"/>
        <LinearLayout
            android:id="@+id/preBattleCharItem2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/barBack">
            <ImageView
                android:id="@+id/preBattleCharItemImg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/barButton"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_weight="5"/>
        <LinearLayout
            android:id="@+id/preBattleCharWeapon3"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/barBack">
            <ImageView
                android:id="@+id/preBattleCharWeaponImg3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/barButton"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_weight="3"/>
        <LinearLayout
            android:id="@+id/preBattleCharDeck3"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/barBack">
            <ImageView
                android:id="@+id/preBattleCharDeckImg3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/barButton"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_weight="3"/>
        <LinearLayout
            android:id="@+id/preBattleCharItem3"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/barBack">
            <ImageView
                android:id="@+id/preBattleCharItemImg3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/barButton"/>
        </LinearLayout>
    </TableRow>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/preBattleChapterGoals"
            android:layout_width="620dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@color/barBack"/>
        <Button
            android:id="@+id/preBattleGoBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/backButton"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <fragment
            android:id="@+id/preBattleFragment_backbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.example.liberatingdelta_kotlin1.UpButtonFragment"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>