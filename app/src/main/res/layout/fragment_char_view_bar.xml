<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenyuFragments.CharViewBarFragment">

    <LinearLayout
        android:id="@+id/charViewBar_vis"
        android:background="@color/barBack"
        android:alpha=".3"
        android:layout_gravity="end"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="25dp"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/carViewBar_inv"
        android:gravity="end"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="200dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2" />
        <Button
            android:id="@+id/charViewBar_stats_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/barButton"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2" >
        </Space>
        <Button
            android:id="@+id/charViewBar_equip_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/barButton"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2" >
        </Space>
        <Button
            android:id="@+id/charViewBar_region_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/barButton"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2" >
        </Space>
        <Button
            android:id="@+id/charViewBar_rank_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/barButton"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2" >
        </Space>
        <Button
            android:id="@+id/charViewBar_info_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/barButton"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>
    </LinearLayout>

</FrameLayout>